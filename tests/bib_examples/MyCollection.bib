	volume = {7},
	pages = {47--63},
	issn = {2405-8807},
	note = {IMPACT2C - Quantifying projected impacts under 2$\,^{\circ}$C warming},
	date-added = {2022-02-14 14:28:29 +0100},
	date-modified = {2022-02-15 14:49:44 +0100},
	bdsk-url-1 = {https://www.sciencedirect.com/science/article/pii/S2405880716300036},

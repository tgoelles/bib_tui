	volume = {44},
	number = {12},
	pages = {6218--6225},
	bdsk-url-1 = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2017GL073661},
	bdsk-url-2 = {https://doi.org/10.1002/2017GL073661}
}


@article{Barbante2006,

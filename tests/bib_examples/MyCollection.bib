@article{Frias-Paredes2016,
	title = {Introducing the Temporal Distortion Index to perform a bidimensional analysis of renewable energy forecast},
	author = {Fr{\'{i}}as-Paredes, Laura and Mallor, Ferm{\'{i}}n and Le{\'{o}}n, Teresa and Gast{\'{o}}n-Romeo, Mart{\'{i}}n},
	year = {2016},
	journal = {Energy},
	doi = {10.1016/j.energy.2015.10.093},

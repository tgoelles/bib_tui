	author = {Edward Hanna and Frank Pattyn and Francisco Navarro and Vincent Favier and Heiko Goelzer and Michiel R. {van den Broeke} and Miren Vizcaino and Pippa L. Whitehouse and Catherine Ritz and Kevin Bulthuis and Ben Smith},

	author = {D{\"{o}}renk{\"{a}}mper, Martin and Olsen, Bjarke T and Witha, Bj{\"{o}}rn and Hahmann, Andrea N and Davis, Neil N and Barcons, Jordi and Ezber, Yasemin and Garci{\'{a}}-Bustamante, Elena and {Fidel Gonz{\'{a}}lez-Rouco}, J and Navarro, Jorge and Sastre-Marug{\'{a}}n, Mariano and Sile, Tija and Trei, Wilke and {\v{Z}}agar, Mark and Badger, Jake and Gottschall, Julia and Rodrigo, Javier Sanz and Mann, Jakob},

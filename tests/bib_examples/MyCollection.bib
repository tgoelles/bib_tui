	issn = {18678548},
	annote = {preprint], https://doi.org/10.5194/amt-2020-258, in review, 2020.},
	bdsk-url-1 = {https://doi.org/10.5194/amt-14-1303-2021},
	type = {Tech. Discuss.}
}


